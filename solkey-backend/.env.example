# Server Configuration
NODE_ENV=development
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb+srv://[username]:[password]@[cluster].mongodb.net/[database]?retryWrites=true&w=majority

# JWT Configuration (use strong secrets in production)
JWT_SECRET=use_a_strong_random_string_at_least_32_chars
JWT_EXPIRES_IN=24h

# OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Frontend URL for CORS
CLIENT_URL=http://localhost:3000

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# Rate Limiting (requests per window)
AUTH_RATE_LIMIT_MAX=30
API_RATE_LIMIT_MAX=100
SECRETS_RATE_LIMIT_MAX=50

# Security Settings
NODE_TLS_REJECT_UNAUTHORIZED=1
SECURE_COOKIE=false # Set to true in production
SESSION_SECRET=use_another_strong_random_string

# Monitoring and Logging (optional)
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true